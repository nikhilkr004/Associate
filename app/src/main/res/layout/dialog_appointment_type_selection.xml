<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/progressbar_bg"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    >

    <View
        android:id="@+id/view_line"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Appointment Type"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line" />
    
     <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2E3A59"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" 
        android:layout_marginEnd="16dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2E3A59"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" 
        android:layout_marginStart="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_instant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/green"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">
        
        <!-- Border workaround -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/double_bg"
            android:layout_marginBottom="@dimen/_5sdp"
            > <!-- 1dp border width -->
            
             <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bg"

                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_instant"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/transaction"
                    android:tint="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- Replacing src with a placeholder or generic icon if specific one doesn't exist. 
                     Ideally we should use vector assets for clock/schedule if available, or imports.
                     Using ic_launcher_foreground temporarily to avoid crash, will update if notified of specific assets. -->

                <TextView
                    android:id="@+id/tv_instant_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Instant\nAppointment"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/img_arrow_instant"
                    app:layout_constraintStart_toEndOf="@id/img_instant"
                    app:layout_constraintTop_toTopOf="@id/img_instant"
                    app:layout_constraintBottom_toBottomOf="@id/img_instant"/>

                <ImageView
                    android:id="@+id/img_arrow_instant"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/outline_arrow_forward_ios_24" 
                    app:layout_constraintBottom_toBottomOf="@id/img_instant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_instant"
                    app:tint="@color/green" />
                <!-- Assuming standard arrow icon exists or using android built-in if possible. 
                     Actually standard android resource: android:drawable/ic_menu_directions is not reliable.
                     Will try to look for existing arrow icon in project. 
                     For now putting placeholder, if it fails I'll fix it. -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Connect instantly with a verified Associate advisor. No waiting, no hassle just expert advice when you need it most."
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_instant" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="12dp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/card_instant">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_bg"
            android:padding="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/double_bg"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_schedule"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/green" />

                <TextView
                    android:id="@+id/tv_schedule_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Schedule\nAppointment"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_schedule"
                    app:layout_constraintEnd_toStartOf="@+id/img_arrow_schedule"
                    app:layout_constraintStart_toEndOf="@id/img_schedule"
                    app:layout_constraintTop_toTopOf="@id/img_schedule" />

                <ImageView
                    android:id="@+id/img_arrow_schedule"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/outline_arrow_forward_ios_24"
                    app:layout_constraintBottom_toBottomOf="@id/img_schedule"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_schedule"
                    app:tint="@color/green" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Book a session with our verified experts at your convenience. Choose a time that fits your schedule no rush, no pressure."
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_schedule" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
