<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="20dp">

    <!-- Background Gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Caller Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCallerProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user"
            android:layout_marginBottom="24dp"
            app:civ_border_width="3dp"
            app:civ_border_color="#FFFFFF" />

        <!-- Caller Name -->
        <TextView
            android:id="@+id/tvCallerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advisor Name"
            android:textColor="@color/green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/tvCallStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Incoming video call..."
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <!-- Call Duration (for outgoing) -->
        <TextView
            android:id="@+id/tvCallDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:visibility="gone" />

        <!-- Call Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <!-- Reject Button -->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/double_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnRejectCall"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/telephone"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <!-- Accept Button -->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:background="@drawable/double_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnAcceptCall"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/call"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Swipe up to answer, down to reject"
        android:textColor="#D38989"
        android:textSize="12sp"
        android:gravity="center" />

</RelativeLayout>