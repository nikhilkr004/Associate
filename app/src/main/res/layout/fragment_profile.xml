<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    tools:context=".Fragments.ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_header_bg">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/orienta"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/user"
            android:tint="@color/white"
            app:civ_border_color="@color/gray"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.147" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:maxLines="1"
            android:text="Nikhil Kumar"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_goneMarginStart="@dimen/_5sdp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="3"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/email"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <ImageButton
            android:id="@+id/changePhotoImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/edit_image"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintVertical_bias="0.723" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/themeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="@dimen/_15sdp">

        <ImageButton
            android:id="@+id/themeIcon"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:padding="@dimen/_8sdp"
            android:tint="@color/primary"
            android:src="@drawable/ic_dark_mode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/themeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/archivo_black"
            android:text="Dark Mode"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/themeSwitch"
            app:layout_constraintStart_toEndOf="@+id/themeIcon"
            app:layout_constraintTop_toTopOf="@+id/themeIcon" />

        <TextView
            android:id="@+id/themeSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Toggle app theme"
            app:layout_constraintEnd_toEndOf="@+id/themeTitle"
            app:layout_constraintStart_toStartOf="@+id/themeTitle"
            app:layout_constraintTop_toBottomOf="@+id/themeTitle" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:thumbTint="@color/green"
            android:thumbTintMode="src_in"
            android:trackTint="@color/gray"
            android:trackTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updateProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/edittext_bg"
        >

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/user"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView810"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/archivo_black"
            android:text="Update Profile"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/sdfg"
            app:layout_constraintStart_toEndOf="@+id/editBtn"
            app:layout_constraintTop_toTopOf="@+id/editBtn" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change your information's"
            app:layout_constraintEnd_toEndOf="@+id/textView810"
            app:layout_constraintStart_toStartOf="@+id/textView810"
            app:layout_constraintTop_toBottomOf="@+id/textView810" />

        <ImageButton
            android:id="@+id/sdfg"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leaveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/edittext_bg"
        android:padding="@dimen/_2sdp">

        <ImageButton
            android:id="@+id/leave"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/session_history"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewwew9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Booked Sessions"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageBuhtton"
            app:layout_constraintStart_toEndOf="@+id/leave"
            app:layout_constraintTop_toTopOf="@+id/leave" />

        <TextView
            android:id="@+id/textViaeaw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click here to see all your requests"
            app:layout_constraintEnd_toEndOf="@+id/textViewwew9"
            app:layout_constraintStart_toStartOf="@+id/textViewwew9"
            app:layout_constraintTop_toBottomOf="@+id/textViewwew9" />

        <ImageButton
            android:id="@+id/imageBuhtton"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helpSupportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageButton
            android:id="@+id/helpSupportIcon"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/ic_warning_red" 
            android:padding="@dimen/_8sdp"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helpSupportTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Help &amp; Support"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/helpSupportArrow"
            app:layout_constraintStart_toEndOf="@+id/helpSupportIcon"
            app:layout_constraintTop_toTopOf="@+id/helpSupportIcon" />

        <TextView
            android:id="@+id/helpSupportSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Raise a complaint or get help"
            app:layout_constraintEnd_toEndOf="@+id/helpSupportTitle"
            app:layout_constraintStart_toStartOf="@+id/helpSupportTitle"
            app:layout_constraintTop_toBottomOf="@+id/helpSupportTitle" />

        <ImageButton
            android:id="@+id/helpSupportArrow"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/termandcondition"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_bg"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:layout_height="wrap_content"
       >

        <ImageButton
            android:id="@+id/leavea"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/termsandconditions"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewwew10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Term &amp; Condition"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageBuhttonn"
            app:layout_constraintStart_toEndOf="@+id/leavea"
            app:layout_constraintTop_toTopOf="@+id/leavea" />

        <TextView
            android:id="@+id/textViaeawa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click here to see term and condition"
            app:layout_constraintEnd_toEndOf="@+id/textViewwew10"
            app:layout_constraintStart_toStartOf="@+id/textViewwew10"
            app:layout_constraintTop_toBottomOf="@+id/textViewwew10" />

        <ImageButton
            android:id="@+id/imageBuhttonn"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/edittext_bg"
        android:padding="@dimen/_2sdp">

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/building"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewwew8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Log out"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/logout"
            app:layout_constraintTop_toTopOf="@+id/logout" />

        <TextView
            android:id="@+id/textViaew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Further secure your account for safety"
            app:layout_constraintEnd_toEndOf="@+id/textViewwew8"
            app:layout_constraintStart_toStartOf="@+id/textViewwew8"
            app:layout_constraintTop_toBottomOf="@+id/textViewwew8" />


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:src="@drawable/outline_arrow_forward_ios_24"
            android:tint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
