<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/edittext_bg"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Top Section: Avatar, Name, Rating -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/user"
            app:civ_border_color="@color/green"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Online Indicator -->
        <View
            android:id="@+id/ic_online_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_circle_green"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/advisor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Dr. Arlene McCoy"
            android:textColor="#191C1F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/advisor_rating_container"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <!-- Specialty + Experience -->
        <TextView
            android:id="@+id/advisor_exp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Gynecologist(5years Exp)"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/advisor_name"
            app:layout_constraintStart_toStartOf="@+id/advisor_name"
            app:layout_constraintTop_toBottomOf="@+id/advisor_name" />

        <!-- Rating Box -->
        <LinearLayout
            android:id="@+id/advisor_rating_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/double_bg"
            app:layout_constraintBottom_toBottomOf="@+id/advisor_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/advisor_name">
            
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/tick"
                app:tint="@color/black" 
                android:layout_marginEnd="2dp"/>

            <TextView
                android:id="@+id/advisor_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textColor="#191C1F"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Legacy IDs to prevent breaks (hidden) -->
        <TextView android:id="@+id/advisor_lang" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:id="@+id/advisor_spec" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>


        <!-- Middle Info Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/double_bg"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image">

            <!-- Availability -->
            <TextView
                android:id="@+id/tv_availability_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Now"
                android:textColor="#191C1F"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_availability_label">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/videocall"
                    app:tint="@color/green" />

                <TextView
                    android:id="@+id/tv_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Video Consult"
                    android:textColor="@color/green"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#E0E0E0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Price -->
            <TextView
                android:id="@+id/advisor_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 180"
                android:textColor="#191C1F"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Consultation Fee"
                android:textColor="#757575"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/advisor_price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bottom Button -->
        <TextView
            android:id="@+id/btn_book_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/primary_button_bg"
            android:gravity="center"
            android:padding="12dp"
            android:text="Book Appointment"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableTint="@color/white"
            android:drawableEnd="@drawable/outline_arrow_forward_ios_24"
            app:layout_constraintTop_toBottomOf="@+id/layout_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
