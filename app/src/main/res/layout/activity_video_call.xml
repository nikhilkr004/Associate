<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.VideoCallActivity">

    <!-- Remote Video View (Advisor Video) -->
    <!-- Remote Video View (Advisor Video) -->
    <FrameLayout
        android:id="@+id/remoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" >
    </FrameLayout>
    
    <!-- Local Video View (User's own video) -->
    <FrameLayout
        android:id="@+id/localVideoView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@drawable/eleveted_bg" />

    <!-- Header Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_above="@id/bottomControler"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCallStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Call - User"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPaymentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Call Controls Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomControler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <!-- Mute Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/btnMute"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/double_bg"
                android:text="Mute"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/mic"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Video Toggle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/btnVideoToggle"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/double_bg"
                android:text="Mute"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/bg_sender_bubble"
                android:textColor="@color/white"
                android:textSize="10sp" />




        </LinearLayout>


        <!-- End Call -->
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/double_bg"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00:00"
                android:gravity="center"
                android:paddingEnd="@dimen/_5sdp"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnEndCall"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/double_bg"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/telephone"
                android:textColor="@color/white"
                android:textSize="10sp" />



        </LinearLayout>


        <!-- Switch Camera -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/btnSwitchCamera"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/double_bg"
                android:text="Mute"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/video"
                android:textColor="@color/white"
                android:textSize="10sp" />






        </LinearLayout>

        <!-- Chat Call -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/double_bg"
                android:text="Mute"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/chat"
                android:textColor="@color/white"
                android:textSize="10sp" />



        </LinearLayout>

    </LinearLayout>

    <!-- Connection Status -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:padding="16dp"
        android:text="Connecting..."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />

</RelativeLayout>
<!-- Updated for repository activity -->
