<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.AdvisorProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Header Section -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/light_gray"
            app:contentInsetStart="0dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/back" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:maxLines="1"
                android:text="Page Title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Action Text (Right side) -->
            <TextView
                android:id="@+id/advisor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/search_field_bg"
                android:padding="@dimen/_5sdp"
                android:paddingEnd="16dp"
                android:text="Online"

                android:textSize="16sp" />

        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Profile main section  -->



        <!-- Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandesh Samudravijay Hirap"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sepcialization_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Mutual Fund | Tex"
             />

            <!-- Rating Row -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/rating_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="@dimen/_5sdp"
                 android:layout_marginStart="@dimen/_10sdp"
                 android:text="5.0"
                 />

             <RatingBar
                 android:id="@+id/rbReviewRating"
                 style="?android:attr/ratingBarStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:numStars="5"
                 android:stepSize="0.5"
                 android:isIndicator="true"
                 android:progressTint="#FFEB3B"
                 android:secondaryProgressTint="#BAB14F"
                 android:rating="5.0"/>
         </LinearLayout>

        </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/_10sdp"
           android:background="@drawable/double_bg"
           android:padding="@dimen/_5sdp"
           android:orientation="vertical">
           <!-- Experience Row -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_4sdp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginEnd="@dimen/_8sdp"
                   android:src="@drawable/portfolio"
                   android:tint="@color/green" />

               <TextView
                   android:id="@+id/tvExperience"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0 - 3 Years Experience"
                   android:textColor="@color/black"
                   android:textSize="16sp" />
           </LinearLayout>

           <!-- Languages Row -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_2sdp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginEnd="@dimen/_8sdp"
                   android:src="@drawable/language"
                   android:tint="@color/green" />

               <TextView
                   android:id="@+id/tvLanguages"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Marathi, English, Hindi"
                   android:textColor="@color/black"
                   android:textSize="16sp" />
           </LinearLayout>

           <!-- AUM Row -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_2sdp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginEnd="@dimen/_8sdp"
                   android:src="@drawable/checkmark"
                   android:tint="@color/green" />

               <TextView
                   android:id="@+id/tvAUM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Current AUM 0-50 cr"
                   android:textColor="@color/black"
                   android:textSize="16sp" />
           </LinearLayout>

           <!-- Company Row -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_2sdp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginEnd="@dimen/_8sdp"
                   android:src="@drawable/building"
                   android:tint="@color/green" />

               <TextView
                   android:id="@+id/tvCompany"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sandesh Hirap and Associates"
                   android:textColor="@color/black"
                   android:textSize="16sp" />
           </LinearLayout>

       </LinearLayout>






   <LinearLayout
       android:id="@+id/Consultation_Lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Consultation Mode"
           android:fontFamily="@font/archivo_black"
           android:textColor="@color/green"
           android:textSize="18sp"
           android:layout_marginStart="@dimen/_10sdp"
           android:textStyle="bold" />

    <!-- Communication Options -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/double_bg"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="5">




            <!-- Chat Button -->

            <LinearLayout
                android:id="@+id/chat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/chat"
                    android:tint="@color/primary"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Chat"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginStart="@dimen/_4sdp"

                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/videocall"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/primary"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Video"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/audio_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/call"
                    android:padding="@dimen/_8sdp"
                    android:tint="@color/primary"
                    android:background="@drawable/double_bg"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Audio"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/office_visit_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/building"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/primary"
                    android:background="@drawable/double_bg"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Office Visit"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inperson_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/inperson_icon"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/primary"
                    android:background="@drawable/double_bg"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="In Person"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>





        </LinearLayout>

   </LinearLayout>


        <!-- About Section -->

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:fontFamily="@font/archivo_black"
            android:textColor="@color/green"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/double_bg"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">

            <TextView
                android:id="@+id/about_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you think compliance cost is more, Try non-compliance.\nWe provide wide range of services such as Audit,\nAccountancy, Consultancy related to Income Tax, Gst, Roc, etc."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Rating | Reviews"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:fontFamily="@font/archivo_black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="end"
                    android:text="View all >>>"
                    android:layout_marginEnd="@dimen/_10sdp"

                 />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/advisorRecyclerview"
                android:layout_width="match_parent"
                tools:listitem="@layout/item_advisor_review"
                android:layout_height="wrap_content" />




        </LinearLayout>

        <!-- Book Appointment Button -->
        <TextView
            android:id="@+id/book_advisor_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/primary_button_bg"
            android:padding="@dimen/_10sdp"
            android:text="Book Advisor"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</ScrollView>